# YAML Lint Configuration for Conditional Pipeline Lab
# This configuration ensures consistent YAML formatting and validation

extends: default

rules:
  # Line length - allow longer lines for complex GitLab CI configurations
  line-length:
    max: 120
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true

  # Comments - require space after # but allow at line end
  comments:
    min-spaces-from-content: 1
    require-starting-space: true

  # Document start/end markers - not required for GitLab CI files
  document-start: disable
  document-end: disable

  # Indentation - use 2 spaces consistently
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  # Key ordering - disable for GitLab CI flexibility
  key-ordering: disable

  # Truthy values - allow yes/no, on/off for GitLab CI
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no', 'on', 'off']
    check-keys: true

  # Empty lines
  empty-lines:
    max: 2
    max-start: 0
    max-end: 1

  # Brackets - allow inline brackets for GitLab CI arrays
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0

  # Braces - allow inline braces for GitLab CI objects  
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0

  # Colons - standard GitLab CI formatting
  colons:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1

  # Commas - standard formatting
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1

  # Hyphens - for GitLab CI list formatting
  hyphens:
    max-spaces-after: 1

  # New line at end of file
  new-line-at-end-of-file: enable

  # No trailing spaces
  trailing-spaces: enable

  # Quoted strings - be flexible for GitLab CI variables
  quoted-strings:
    quote-type: any
    required: false
    extra-required: []
    extra-allowed: []

  # Float values - allow GitLab CI numeric formats
  float-values: disable

  # Octal values - disable for GitLab CI
  octal-values: disable